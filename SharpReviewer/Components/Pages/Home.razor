@page "/"
@rendermode InteractiveServer
@using System.Text.Json
@using SharpReviewer.Models
@using Microsoft.SemanticKernel

@inject Kernel kernel

<PageTitle>Sharp Reviewer - AI Code Assistant</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">Sharp Reviewer</h1>
        <p class="lead">Paste your C# code below and let our AI find Clean Code and SOLID violations.</p>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">C# Code to Review</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <textarea class="form-control font-monospace flex-grow-1 mb-3"
                              style="min-height: 400px; resize: none;"
                              placeholder="public class GodClass { ... }"
                              @bind="userInputCode"></textarea>

                    <button class="btn btn-primary btn-lg w-100"
                            @onclick="RunReviewAsync"
                            disabled="@(_isLoading || string.IsNullOrWhiteSpace(userInputCode))">
                        @if (_isLoading)
                        {
                        <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                        <span>Analysing...</span>
                        }
                        else
                        {
                        <span><i class="bi bi-search"></i> Analyse Code</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0 text-dark">Analysis result</h5>
                </div>
                <div class="card-body overflow-auto" style="max-height: 500px;">

                    @if (_reviewResult == null && !_isLoading)
                    {
                    <div class="text-center text-muted mt-5">
                        <p>Waiting for code submission...</p>
                    </div>
                    }

                    @if (_isLoading)
                    {
                    <div class="d-flex justify-content-center align-items-center h-100">
                        <div class="spinner-grow text-primary" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    }

                    @if (_reviewResult != null && !_isLoading)
                    {
                    <div class="d-flex align-items-center mb-3">
                        <h2 class="mb-0 me-3">Nota:</h2>
                        <span class="badge rounded-pill fs-3 @_reviewResult.ScoreColor">
                                @_reviewResult.Score / 100
                            </span>
                    </div>

                    <p class="fs-5">@_reviewResult.Summary</p>

                    @if (_reviewResult.Issues.Any())
                    {
                    <h5 class="text-danger mt-4"><i class="bi bi-bug"></i> Issues found:</h5>
                    <ul class="list-group mb-4">
                        @foreach (var issue in _reviewResult.Issues)
                        {
                        <li class="list-group-item list-group-item-warning">@issue</li>
                        }
                    </ul>
                    }

                    <h5 class="text-success mt-4"><i class="bi bi-code-square"></i> Refactored Code:</h5>
                    <div class="bg-dark text-light p-3 rounded-3">
                        <pre><code class="language-csharp">@_reviewResult.RefactoredCode</code></pre>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code{
    private string userInputCode = string.Empty;
    private bool _isLoading = false;
    private CodeReviewResult? _reviewResult;

    private async Task RunReviewAsync()
    {
        _isLoading = true;
        _reviewResult = null;

        try
        {
            var reviewerPlugin = kernel.Plugins.GetFunction("AnalyzeCodePlugin", "AnalyzeCode");
            var result = await kernel.InvokeAsync(reviewerPlugin, new() { ["dirtyCode"] = userInputCode });
            string rawJson = result.GetValue<string>() ?? "{}";
            _reviewResult = JsonSerializer.Deserialize<CodeReviewResult>(rawJson, new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
        }
        catch (Exception ex)
        {
            _reviewResult = new CodeReviewResult 
            { 
                Score = 0, 
                Summary = "An error occured. Check the API key.",
                Issues = [ex.Message]
            };
        }
        finally
        {
            _isLoading = false;
        }
    }
}
